<%= form_for [@post, @post.comments.build] do |f| %>
	<div class="form-group">
		<%= f.label :content %><br>
		<%= f.text_area :content, size: '46*25', :class => 'form-control',:required => true %>
		<p class="help-block"><em>Type the content to comment.</em></p>
	</div>
	<div class="form-group">
		<%= f.submit "Post Comment", :class => 'btn btn-lg btn-primary btn-block', :role => 'button'  %>
	</div>
<% end %>