<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12">
    <h2 class="text-center">Post Feed</h2>

    <p>
      <% if user_signed_in? %>
        <%= link_to("New Post", new_post_path , :class => 'btn btn-primary btn-lg', :role => 'button') %>
      <% else %>
        <%= link_to("New Post", new_post_path , :class => 'btn btn-primary btn-lg disabled', :role => 'button') %>
        ***You should be signed in.
      <% end %>
    </p>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>